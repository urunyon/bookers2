<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <%= f.label :Name %><br>
          <%= f.text_field :name ,class:"form-control name" %><br>
          <%= f.label :Image %><br>
          <%= f.file_field :profile_image, accept:"image/*" %><br>
          <br
          <%= f.label :Intoroduction %><br>
          <%= f.text_area :introduction ,class:"form-control introduction"%><br>
          <%= f.submit 'Update User' ,class:"btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>
