<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
     <%= render 'list', book: @book_new , user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
  		<table class='table'>
  		  <thead>
  		    <tbody>
        		  <tr>
                <td>
                  <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(80,80) %><br>
                  <%= @book.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                  <% end %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to 'Destroy', book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "本当に削除しますか？"} %>
                  </td>
                <% else %>
                  <td>
                  </td>
                  <td>
                  </td>
                <% end %>
              </tr>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>
