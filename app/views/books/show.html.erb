
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
     <%= render 'list', book: @book , user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
  		<table class='table'>
  		  <thead>
  		    <tbody>
  		      <% @books.each do |book| %>
        		  <tr>
                <td>
                  <%= link_to book_path(book.id) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                  <% end %>
                  <%= link_to book_path(book.id) do %>
                  <% end %>
                  <%= link_to users_path(@user.id) do %>
                  <% end %>
                </td>
                <td>
                  <%= book.title %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_book_path(book.id), class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(book.id), class: "btn btn-sm btn-danger", method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>
