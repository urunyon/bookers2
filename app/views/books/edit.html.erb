<div class='row'>
  </div>
  <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
      <%= f.label :Title %><br>
      <%= f.text_field :title ,class:"form-control book_title" %><br>
      <%= f.label :Opinion %><br>
      <%= f.text_area :body ,class:"form-control book_body" %><br>
      <%= f.submit 'Create Book' ,class:"btn btn-success" %>
    <% end %>
    